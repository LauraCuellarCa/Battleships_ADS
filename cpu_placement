import random

def place_cpu_ships():
    ship_sizes = [1, 2, 3, 4, 5]
    grid_size = 10
    grid = [[0] * grid_size for _ in range(grid_size)]

    for size in ship_sizes:
        while True:
            orientation = random.choice(['horizontal', 'vertical'])
            if orientation == 'horizontal':
                x = random.randint(0, grid_size - size)
                y = random.randint(0, grid_size - 1)
                if is_valid_placement(grid, x, y, size, orientation):
                    for i in range(size):
                        grid[y][x + i] = 1
                    break
            else:
                x = random.randint(0, grid_size - 1)
                y = random.randint(0, grid_size - size)
                if is_valid_placement(grid, x, y, size, orientation):
                    for i in range(size):
                        grid[y + i][x] = 1
                    break

    return grid

def is_valid_placement(grid, x, y, size, orientation):
    grid_size = 10

    if orientation == 'horizontal':
        if x + size > grid_size:
            return False
        for i in range(size):
            if grid[y][x + i] != 0:
                return False
    else:
        if y + size > grid_size:
            return False
        for i in range(size):
            if grid[y + i][x] != 0:
                return False

    return True
